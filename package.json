{
  "name": "avatar-classroom",
  "version": "1.0.0",
  "main": "main.js",
  "description": "授業用アバター会議アプリ",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.example.avatarclassroom",
    "productName": "アバター教室",
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}